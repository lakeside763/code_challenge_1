{
  "name": "todo-app",
  "version": "1.0.1-alpha.1",
  "description": "oozou full-stack challenge",
  "main": "index.js",
  "author": "Moses Idowu",
  "license": "MIT",
  "scripts": {
    "start": "node -r dotenv/config index.js dotenv_config_path=.env.local",
    "dev": "npx nodemon -r dotenv/config index.js dotenv_config_path=.env.local",
    "seed-db": "node -r dotenv/config scripts/seedDB.script.js dotenv_config_path=.env.local",
    "migrate:up": "yarn db-migrate up",
    "migrate:down": "yarn db-migrate down",
    "migrate:save": "npx dotenv -e .env.local -- yarn db-migrate create",
    "introspect": "npx dotenv -e .env.local -- yarn prisma db pull --force",
    "introspect-ci": "npx dotenv -e .env.test.ci --  yarn prisma introspect",
    "studio": "npx dotenv -e .env.local -- yarn prisma studio",
    "migrate:local": "npx dotenv -e .env.local -- yarn migrate:up",
    "migrate:local:down": "npx dotenv -e .env.local -- yarn migrate:down",
    "migrate:test": "npx dotenv -e .env.test.local -- yarn migrate:up",
    "migrate:test:down": "npx dotenv -e .env.test.local -- yarn migrate:down",
    "migrate:test-ci:down": "npx dotenv -e .env.test.ci -- yarn migrate:down",
    "migrate:test-ci": "npx dotenv -e .env.test.ci -- yarn migrate:up",
    "migrate": "yarn migrate:local && yarn migrate:test",
    "migrate-down": "yarn migrate:local:down && yarn migrate:test:down",
    "prepdb": "yarn migrate && yarn introspect && yarn prisma generate",
    "prepdb:down": "yarn migrate-down && yarn introspect && yarn prisma generate",
    "test": "npx dotenv -e .env.test.local -- jest --forceExit --detectOpenHandles",
    "lint": "yarn eslint . --fix"
  },
  "dependencies": {
    "@prisma/client": "^3.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "db-migrate": "0.11.12",
    "db-migrate-pg": "1.2.2",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "jest": "^27.2.1",
    "morgan": "^1.10.0",
    "supertest": "^6.1.6"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^7.0.2",
    "nodemon": "^2.0.12",
    "prisma": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
